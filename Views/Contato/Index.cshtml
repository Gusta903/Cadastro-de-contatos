@model List<ContatoModel>
@{
	ViewData["Title"] = "Listagem de contatos";
}
<div class="text-center">

	@if (TempData["MensagemSucesso"] != null)
	{
		<div class="alert alert-success" role="alert">
			<button type="button" class="btn btn-danger btn-sm close-alert" ariel-label="Close">X</button>
			@TempData["MensagemSucesso"]
		</div>
	}
	@if(TempData["MensagemErro"] != null)
	{
		<div class="alert alert-danger" role="alert">
			<button type="button" class="btn btn-danger btn-sm close-alert" ariel-label="Close">X</button>
			@TempData["MensagemErro"];
		</div>
	}



	<div class="d-grid gap-2 d-md-flex justify-content-md-start">
		<a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="criar">Adicionar novo contato</a>
	</div>

	<h1 class="display-4">Listagem de contatos</h1>
	<table class="table">
		<br />
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Nome</th>
				<th scope="col">Email</th>
				<th scope="col">Numero</th>
				<th scope="col">Apagar</th>
			</tr>
		</thead>
		<tbody>
			@{
				if (Model != null && Model.Any())
				{
					foreach (ContatoModel contato in Model)
					{
						<tr>
							<th scope="row">@contato.Id</th>
							<td>@contato.Nome</td>
							<td>@contato.Email</td>
							<td>@contato.Numero</td>
							<td>
								<div class="btn-group" role="group" aria-label="Basic example">
									<a type="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
									<a type="button" class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="editar">Editar</a>

								</div>
							</td>
						</tr>



					}






				}
			}


		</tbody>
	</table>
</div>

